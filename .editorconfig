root=true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[*.{gitignore,gitattributes}]
trim_trailing_whitespace = false

# ignore
[/{node_modules,dist,build,.react-router}/**]
charset = unset
insert_final_newline = unset
end_of_line = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
max_line_length = unset
