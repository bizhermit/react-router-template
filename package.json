{
  "name": "web-app-template",
  "version": "0.0.0",
  "description": "web app template",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "npm run generate:i18n-types & npm run generate:openapi-types",
    "build": "npx react-router build",
    "dev": "npx react-router dev --host",
    "start": "npx react-router-serve ./build/server/index.js",
    "typecheck": "npx tsc && npx eslint",
    "typecheck:rebuild": "npm run prebuild && npx react-router typegen && npm run typecheck",
    "generate:i18n-types": "node ./scripts/generate-i18n-types.mjs",
    "generate:openapi": "npx tsx ./scripts/parse-openapi-docs.ts",
    "generate:openapi-types": "npm run generate:openapi && bash ./scripts/generate-openapi-types.sh",
    "generate:auth-schema": "npx @better-auth/cli generate --config src/lib/server/auth/auth.ts --output src/lib/server/auth/schema.ts --yes",
    "generate:migration": "npx drizzle-kit generate",
    "migrate": "npx drizzle-kit migrate",
    "format": "npx eslint --fix",
    "playwright": "npx playwright test",
    "test": "npx vitest run src"
  },
  "dependencies": {
    "@react-router/node": "^7.11.0",
    "@react-router/serve": "^7.11.0",
    "better-auth": "^1.4.7",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.41.0",
    "isbot": "^5.1.32",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.11.0",
    "serialize-javascript": "^7.0.2",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.7",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "^7.11.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/serialize-javascript": "^5.0.4",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "js-yaml": "^4.1.1",
    "openapi-typescript": "^7.10.1",
    "react-router-devtools": "^6.0.0",
    "sass-embedded": "^1.97.1",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
