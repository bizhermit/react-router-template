{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cleanup branch",
      "group": "none",
      "type": "shell",
      "command": "git switch main && git pull && git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -d"
    },
    {
      "label": "dev",
      "group": "none",
      "type": "shell",
      "command": "npm run dev"
    },
    {
      "label": "prod start",
      "group": "none",
      "type": "shell",
      "command": "npm run build && npm run start"
    },
    {
      "label": "migrate",
      "group": "none",
      "type": "shell",
      "command": "npm run migrate"
    },
    {
      "label": "Prisma Studio",
      "group": "none",
      "type": "shell",
      "command": "npm run prisma"
    },
    {
      "label": "typecheck",
      "group": "none",
      "type": "shell",
      "command": "npm run typecheck"
    },
    {
      "label": "format",
      "group": "none",
      "type": "shell",
      "command": "npm run format"
    },
    {
      "label": "generate i18n types",
      "group": "none",
      "type": "shell",
      "command": "npm run generate-i18n-types"
    },
    {
      "label": "playwright",
      "group": "none",
      "type": "shell",
      "command": "npm run playwright"
    }
  ]
}